<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DailyNews" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_blue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_blue</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="tabLayout" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/robotoslab_regular</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text1" parent="">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/rosarivo_regular</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="Text2" parent="">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/yesevaone_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text3" parent="">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/rosarivo_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text4" parent="">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/wellfleet_regular</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="Text5" parent="">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/rufina_bold</item>
        <item name="android:textColor">@color/light_blue</item>
    </style>

    <style name="Text6" parent="">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/saira_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text7" parent="">
        <item name="android:textSize">26sp</item>
        <item name="android:fontFamily">@font/zillaslab_semibold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.DailyNews.NoActionBar" parent="">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
</resources>